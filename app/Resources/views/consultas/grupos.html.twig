{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de grupos</h1>
    <h2>Encontrados {{ grupos|length }} grupo{% if grupos|length != 1 %}s{% endif %}</h2>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>NÂº estudiantes</th>
                <th>Tutor</th>
            </tr>
        </thead>
        <tbody>
            {% for grupo in grupos %}
                <tr>{# Comentario #}
                    <td><a href="{{ path("listado_grupo", {'grupo': grupo[0].id }) }}">{{ grupo[0].descripcion }}</a></td>
